#!/usr/bin/env bash


# install nvim 0.5 //TODO
sudo add-apt-repository ppa:neovim-ppa/unstable

# install nodejs //TODO install dotnetcore //TODO
sudo apt-get update

# create folders
sudo apt-get install neovimmkdir -p ~/.config/nvim/plugin
mkdir -p ~/.config/nvim/after/plugin
mkdir -p ~/.config/nvim/lua/leantoinetr

# add symlink .bashrc
rm -rf ~/.bashrc
ln -s ~/dotfiles/bash/.bashrc ~/.bashrc

# add symlink .tmux
rm -rf ~/.tmux.conf
ln -s ~/dotfiles/tmux/.tmux.conf ~/.tmux.conf

# add symlink nvim
for f in `find nvim/ -regex ".*\.vim$\|.*\.lua$"`; do
    rm -rf ~/.config/$f
    ln -s ~/dotfiles/$f ~/.config/$f
done

